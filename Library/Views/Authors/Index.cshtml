@{
  Layout = "_Layout";
}

@using Library.Models;
@model List<Author>;

<h1>A list of all the books in the library</h1>

@if (@Model.Count == 0)
{
  <p>There are currently no authors in the database.</p>
}

@foreach (Author author in Model)
{
  <p>@Html.ActionLink($"{author.Name}", "Details", new { id = author.AuthorId })</p>
}

<p>@Html.ActionLink("Add a new author to the database", "Create")</p>