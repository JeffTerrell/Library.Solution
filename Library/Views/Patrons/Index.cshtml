@{
  Layout = "_Layout";
}

@using Library.Models
@model List<Patron>

<h4>Patrons of the library:</h4>
@if (Model.Count() > 0)
{
  <ul>
  @foreach (Patron patron in Model)
  {
    <li>@Html.ActionLink($"{patron.Name}'s details", "Details", "Patrons", new {id = patron.PatronId})</li>
  }
  </ul>
}

<p>@Html.ActionLink("Add a patron", "Create")</p>