@{
  Layout = "_Layout";
}

@using Library.Models;
@model List<Book>;

<h1>A list of all the books in the library</h1>

@if (@Model.Count == 0)
{
  <p>The library currently has no books.</p>
}

@foreach (Book book in Model)
{
  <p>@Html.ActionLink($"{book.Name}", "Details", new { id = book.BookId })</p>
}

<p>@Html.ActionLink("Add a new book to the library", "Create")</p>